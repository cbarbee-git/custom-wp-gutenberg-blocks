{
  "$schema": "https://schemas.wp.org/trunk/block.json",
  "apiVersion": 2,
  "name": "custom-block/text-box",
  "version": "0.1.0",
  "title": "Text Box",
  "category": "text",
  "description": "This is a Custom Text Box Block",
  "keywords": [
    "text",
    "box",
    "paragraph"
  ],
  "attributes": {
    "text": {
      "type": "string",
      "source": "html",
      "selector": "p"
    },
    "textAlignment": {
      "type": "string",
      "default": "left"
    },
    "shadow": {
      "type": "boolean",
      "default": false
    },
    "shadowOpacity": {
      "type": "number",
      "default": 30
    },
    "gradient": {
      "type": "string"
    },
    "style": {
      "type": "object",
      "default": {
        "color": {
          "background": "#fff",
          "text": "#000"
        },
        "spacing": {
          "padding": {
            "top": "50px",
            "right": "50px",
            "bottom": "50px",
            "left": "50px"
          }
        }
      }
    }
  },
  "supports": {
    "html": false,
    "color": {
      "text": true,
      "background": true,
      "gradients": true
    },
    "spacing": {
      "padding": true
    }
  },
  "styles": [
    {
      "name": "squared",
      "label": "Squared",
      "isDefault": true
    },
    {
      "name": "rounded",
      "label": "Rounded"
    }
  ],
  "example": {
    "attributes": {
      "text": "Some sample content appears here.",
      "background": "#fff",
      "shadow": true
    }
  },
  "textdomain": "custom-text-box",
  "editorScript": "file:./index.js",
  "editorStyle": "file:./index.css",
  "style": "file:./style-index.css"
}